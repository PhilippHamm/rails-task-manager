<h2>My tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li class="checked"> <%= link_to task.title, "/tasks/#{task.id}" %>  </li>
      <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "Delete #{task.title}"} %>
    <% else %>
      <li> <%= link_to task.title, "/tasks/#{task.id}" %> </li>
      <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "Delete #{task.title}"} %>
    <% end %>
    <% %>
  <% end %>
</ul>
<%= link_to "Add a new task", "/tasks/new" %>

